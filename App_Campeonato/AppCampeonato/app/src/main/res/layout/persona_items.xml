<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imgItemP"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtItemN"
        android:text="Nombre"
        android:textSize="17sp"
        android:textColor="#0e11d1"
        android:textAlignment="center"
        android:layout_marginRight="33dp"
        android:layout_below="@+id/imgItemP" />

    <TextView
        android:text="Correo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtItemEm"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/txtItemN"
        android:layout_alignStart="@+id/txtItemN"
        android:layout_alignEnd="@+id/imgItemP"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget.EditText"
        android:textSize="10sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtItemA"
        android:text="Apellido"
        android:textSize="17sp"
        android:textColor="#0e11d1"
        android:textAlignment="center"
        android:layout_marginRight="36dp"
        android:layout_alignBaseline="@+id/txtItemN"
        android:layout_alignBottom="@+id/txtItemN"
        android:layout_alignEnd="@+id/txtItemEm"
        android:layout_marginEnd="-5dp" />


</RelativeLayout>